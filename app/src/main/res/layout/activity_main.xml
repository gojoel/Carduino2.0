<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.rc.carduino.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/controller_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <fragment
        android:id="@+id/controller_fragment"
        android:name="com.rc.carduino.fragment.ControllerFragment"
        android:layout_below="@+id/controller_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      />

</RelativeLayout>
